{% extends '@ShopsysFramework/Admin/Content/Customer/detail.html.twig' %}

{% block title %}- {{ 'Editing customer'|trans }} - {{ user.fullName }}{% endblock %}
{% block h1 %}
    {{ 'Editing customer'|trans }} - {{ user.fullName }}
    {% if not user.billingAddress.isCompanyWithMultipleUsers %}
        <a href="{{ ssoLoginAsUserUrl }}" target="_blank" class="btn-link-style btn-link-style--iconic-l">
            <i class="svg svg-forward-page"></i>
            <span>
                {{ 'Log in as user'|trans }}
            </span>
        </a>
    {% endif %}
{% endblock %}
