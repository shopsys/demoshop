{% extends 'Front/Layout/layoutWithPanel.html.twig' %}
{% import 'Front/Inline/Paginator/paginator.html.twig' as paginator %}
{% import 'Front/Content/Product/filterFormMacro.html.twig' as productFilterForm %}

{% set domain = getDomain() %}

{% block meta_description %}
    {{- category.getSeoMetaDescription(domain.id)|default(getSeoMetaDescription()) -}}
{% endblock %}

{% block title %}
    {{ category.getSeoTitle(domain.id)|default(category.name) }}
{% endblock %}

{% block content %}
    {% block breadcrumb %}
        {{ render(controller('App\\Controller\\Front\\BreadcrumbController:indexAction', { routeName: getRoute(), routeParameters: getRouteParams() } )) }}
    {% endblock %}
    <div class="web__main web__main--with-panel">
        <div class="web__main__content js-main-content">

            {{ render(controller('App\\Controller\\Front\\FlashMessageController:indexAction')) }}

            {% block main_content %}
            <div class="box-list">
                {{ render(controller('App\\Controller\\Front\\AdvertController:boxAction',{'positionName' : 'productList'})) }}
                <h1>
                    {{ category.getSeoH1(domain.id)|default(category.name) }}
                </h1>
                <div class="box-list__description">
                    <div class="js-category-description box-list__description__text in-user-text">
                        {{ category.getDescriptionSecond(domain.id)|raw }}
                    </div>
                    <div class="box-list__description__more">
                        <span class="js-category-description-load-more link-style box-list__description__more__btn">
                            {{ 'View more'|trans }}
                        </span>
                    </div>
                </div>
                {% if visibleChildren is not empty %}
                    <h2>{{ 'List of subcategories'|trans }}</h2>

                    {{ render(controller('App\\Controller\\Front\\CategoryController:categoryListAction', {categories: visibleChildren})) }}
                {% endif %}

                {{ render(controller('App\\Controller\\Front\\BestsellingProductController:listAction', { category: category })) }}

                <a href="" class="js-filter-toggle-button box-filter__toggle-button btn btn--primary btn--block">
                    {{ 'Show filters'|trans }}
                </a>

                <div class="box-filter__overlay js-filter-toggle-overlay"></div>

                <div class="js-product-list-ajax-filter-products-with-controls">
                    <div>
                        {{ render(controller('App\\Controller\\Front\\ProductController:selectOrderingModeForListAction')) }}
                    </div>
                    {% include 'Front/Content/Product/productsWithControls.html.twig' with {paginationResult: paginationResult, filterFormSubmitted: filterFormSubmitted} %}
                </div>

                <div class="box-list__description">
                    <div class="js-category-description box-list__description__text in-user-text">
                        {{ category.getDescription(domain.id)|raw }}
                    </div>
                    <div class="box-list__description__more">
                        <span class="js-category-description-load-more link-style box-list__description__more__btn">
                            {{ 'View more'|trans }}
                        </span>
                    </div>
                </div>
            </div>
            {% endblock %}
        </div>

        <div class="web__main__panel">
            <div class="wrap-border">
                {{ render(controller('App\\Controller\\Front\\CategoryController:panelAction', { request: app.request } )) }}
            </div>

            {% if paginationResult.results|length > 0 or filterFormSubmitted %}
                <div class="box-filter js-product-filter">
                    {{ productFilterForm.filterForm(
                        filterForm,
                        url('front_product_list', { id: category.id }),
                        url('front_product_list', { id: category.id }),
                        null,
                        'product_list',
                        productFilterCountData,
                        priceRange,
                        discountCoeficient
                    ) }}
                </div>
            {% endif %}

            {% block panel_content %}{% endblock %}

            {{ render(controller('App\\Controller\\Front\\AdvertController:boxAction',{'positionName' : 'leftSidebar'})) }}
        </div>
    </div>
{% endblock %}
